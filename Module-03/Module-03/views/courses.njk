{% extends  "layout.njk" %}

{% block head %}
  <title>Cursos - Rocketseat</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>
{% endblock head %}
  
{% block content %}


    <h1 class="page_title">Cursos</h1>

  <section class="cards">

    {% for item in items %}
      <div class="card b_rocket" id="{{item.id}}">
        <div class="card_number">
          {{item.number}}
        </div>
        <div class="card_image {{ 'news-news' if item.news }}">
          <img src="{{item.img}}" alt="Imagem" />
          {% if item.news %}
            <div class="news">News</div>
        {% endif %}
        </div>
      
        <div class="card_content">
          <p>
            <strong>{{item.title}} </strong> {{item.strong}}
          </p>
        </div>
        <div class="card_info">
          <p>{{item.card}}</p>
          <div class="p_price">
            <p>{{item.price}}</p>
          </div>
        </div>
      </div>
    {% endfor%}
   </section>

    
      </div>
    </div>

    <script src="./scripts.js"></script>

    {% endblock content %}