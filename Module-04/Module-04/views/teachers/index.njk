{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
		<table width="100%">
			<thead>
				<tr>
						<th>Teacher</th>
						<th>Attendance</th>
						<th>Action</th>
				</tr>
			</thead>
			<tbody>
				{% for teacher in teachers%}
				<tr>
					<td>{{teacher.name}}</td>
					<td>{{teacher.services}}</td>
					<td><a href="/teachers/{{teacher.id}}">View</a></td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
</div>

{% endblock content %}

