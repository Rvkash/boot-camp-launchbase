{% extends "layout.njk" %}

{% block content %}

<div class="card">
	<section class="avatar"
	 style="background: url({{ teacher.avatar_url }}) no-repeat center center /cover"></section>

		<section class="details">
				<h3>Detalhes</h3>

				<div class="item">
					<div> Name </div>
					<div> {{ teacher.name }} </div>
				</div>

				<div class="item">
					<div> Years </div>
					<div> {{ teacher.birth }} </div>
				</div>

				<div class="item">
					<div> Sex </div> 
					<div> {{ "Masculino" if  teacher.gender == "M" else "Feminino"}} </div> 
				</div>

				<div class="item">
						<div> Occupation Area </div>
						<div>
							{% for service in teacher.services %}
						<span>{{ service }}</span>
							{% endfor %}
						</div>
				</div>

				<div class="item">
					<div> Data </div>
						<div>{{ teacher.created_at }}</div>
					</div>
				

		</section>
</div>

{% endblock content %}

